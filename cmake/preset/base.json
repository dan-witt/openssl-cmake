{
    "version": 5,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cmakeExecutable": "cmake",
            "cacheVariables": {
                "CPM_SOURCE_CACHE": "${sourceDir}/build/.cache",
                "OPENSSL_INSTALL": true,
                "OPENSSL_TEST": true
            }
        },
        {
            "name": "host-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "host-macos",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "host-windows",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "host-not-windows",
            "hidden": true,
            "condition": {
                "type": "notEquals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "target-android",
            "hidden": true,
            "toolchainFile": "$env{ANDROID_NDK}/build/cmake/android.toolchain.cmake",
            "cacheVariables": {
                "ANDROID_NDK": "$env{ANDROID_NDK}",
                "ANDROID_PLATFORM": "android-23",
                "ANDROID_USE_LEGACY_TOOLCHAIN_FILE": false,
                "OPENSSL_CONFIGURE_OPTIONS": "--openssldir=/system/etc/security/cacerts",
                "OPENSSL_PATCH": "${sourceDir}/patch/android.patch"
            }
        },
        {
            "name": "target-ios",
            "hidden": true,
            "toolchainFile": "${sourceDir}/cmake/toolchain/ios.cmake"
        },
        {
            "name": "target-ios_sim",
            "hidden": true,
            "toolchainFile": "${sourceDir}/cmake/toolchain/ios_sim.cmake"
        },
        {
            "name": "target-linux",
            "hidden": true
        },
        {
            "name": "target-macos",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0",
                "OPENSSL_CONFIGURE_OPTIONS": "-mmacos-version-min=11.0"
            }
        },
        {
            "name": "target-windows",
            "hidden": true
        },
        {
            "name": "ninja",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_COLOR_DIAGNOSTICS": true,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "vs2022",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "toolset": {
                "value": "host=x64",
                "strategy": "set"
            }
        },
        {
            "name": "xcode",
            "hidden": true,
            "generator": "Xcode"
        }
    ],
    "buildPresets": [
        {
            "name": "host-linux",
            "hidden": true,
            "condition": {
